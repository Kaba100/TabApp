<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TabApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TabApp"
    xmlns:pages="clr-namespace:TabApp.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Chat" Icon="chat.png">
            <ShellContent ContentTemplate="{DataTemplate pages:ChatPage }"/>
        </Tab>
        <Tab Title="Calls" Icon="calls.png">
            <ShellContent ContentTemplate="{DataTemplate pages:CallsPage }"/>
        </Tab>
        <Tab Title="People" Icon="people.png">
            <ShellContent ContentTemplate="{DataTemplate pages:PeoplePage }"/>
        </Tab>
    </TabBar>

</Shell>
